@{
    Layout = "_LayoutCP";

}

@model IEnumerable<qNotifier.Models.User>

<h2>User list:</h2>

<div class="table-responsive">
    <table class="table my-3">

        <tr><th>Email:</th><th>User records number:</th><th></th></tr>

        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Records.Count</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                        <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Change password</a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
        <tr>
            <td colspan="3">
                <a class="btn btn-sm btn-primary" asp-action="Create">Add user</a>
            </td>
        </tr>
    </table>
</div>