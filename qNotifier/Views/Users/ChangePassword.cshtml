@{
    Layout = "_LayoutCP";

}

@model qNotifier.ViewModels.ChangePasswordViewModel

<h2>Password change @Model.Email:</h2>

<form asp-action="ChangePassword" asp-controller="Users">

    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />

    <input type="hidden" asp-for="Email" />

    <div class="form-group my-3">
        <label asp-for="OldPassword" class="control-label">Old password:</label>
        <input type="password" asp-for="OldPassword" class="form-control" />
        <span asp-validation-for="OldPassword"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">New password:</label>
        <input type="password" asp-for="NewPassword" class="form-control" />
        <span asp-validation-for="NewPassword"></span>
    </div>

    <div class="form-group my-3">
        <label asp-for="PasswordConfirm"></label><br />
        <input  type="password" asp-for="PasswordConfirm" class="form-control" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>

    <div class="form-group my-3">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>

</form>