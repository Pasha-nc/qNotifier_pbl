@{
    Layout = "_LayoutCP";

}

@model qNotifier.ViewModels.CreateUserViewModel

<h2>Create user:</h2>

<form asp-action="Create" asp-controller="Users">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group my-3">
        <label asp-for="Email" class="control-label">Email:</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password" class="control-label">Password:</label>
        <input type="password" asp-for="Password" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="PasswordConfirm"></label><br />
        <input type="password" asp-for="PasswordConfirm" class="form-control"  />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    
    <div class="form-group my-3">
        <input type="submit" value="Add user" class="btn btn-primary" />
    </div>

</form>