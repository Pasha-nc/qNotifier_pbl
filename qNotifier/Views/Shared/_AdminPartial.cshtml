@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


<div class="container-fluid">
    <nav class="navbar navbar-expand-lg navbar-light">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navAdmin" aria-controls="navAdmin" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navAdmin">
            <ul class="navbar-nav flex-wrap">
                @if (SignInManager.IsSignedIn(User) && User.IsInRole("admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Users" asp-action="Index">User list</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Users" asp-action="Edit" asp-route-id="@UserManager.GetUserId(User)">Edit user</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Users" asp-action="ChangePassword" asp-route-id="@UserManager.GetUserId(User)">Change password</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Users" asp-action="Create">Create user</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Roles" asp-action="Index">Roles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Roles" asp-action="UserList">Edit users roles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Roles" asp-action="Create">Create role</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                }
            </ul>
        </div>        
    </nav>
</div>
